import matplotlib.pyplot as plt
import numpy as np
fig = plt.figure()
plt.ylim(1.0, 4.0)
plt.xlim(1.0, 3.0)
x = [1.0, 1.5, 2.0, 2.5, 3.0]
y = ['1.0', '1.5', '2.0', '2.5', '3.0', '3.5', '4.0']
plt.xticks(np.arange(0,2*np.pi,np.pi/4), ['0', 'pi/4', 'pi/2', '3pi/4', 'pi', '5pi/4', '3pi/2', '7pi/4'])
plt.plot(x, y)
plt.show()